<%= form_with(model: [@project, @relationship_type], local: true) do |form| %>
  <div class="form-group row">
    <%= form.label :name, class: "col-form-label col-sm-1"%>
    <div class="col-sm-3">
      <%= form.text_field :name, id: :relationship_type_name, class: "form-control #{is_invalid(@relationship_type, :name)}" %>
      <%= error_message_for(@relationship_type, :name) %>
    </div>    
  </div>

  <div class="form-group row">
    <%= form.label :color, class: "col-form-label col-sm-1"%>
    <div class="col-sm-3">
      <%= form.text_field :color, id: :relationship_type_color, class: "form-control #{is_invalid(@relationship_type, :color)}" %>
      <%= error_message_for(@relationship_type, :color) %>
    </div>    
  </div>

  <div class="actions">
    <%= form.submit(class: "btn btn-primary") %>
  </div>
<% end %>

<script type="text/javascript">
  $(document).on('turbolinks:load', function() {
    $('#relationship_type_color').minicolors({
      theme: 'bootstrap'
    });
  });
</script>
