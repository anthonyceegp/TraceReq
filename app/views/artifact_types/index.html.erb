<div class="container-fluid">
  <div class="row">
    <nav class="col-sm-3 col-md-2 d-none d-sm-block bg-light sidebar">
      <ul class="nav nav-pills flex-column">
        <li class="nav-item">
          <%= link_to "Artifact Types", artifact_types_path, class: "nav-link active" %>
        </li>
        <li class="nav-item">
          <%= link_to "New Artifact Type", new_artifact_type_path, class: "nav-link" %>
        </li>
      </ul>
    </nav>
    <main class="col-sm-9 ml-sm-auto col-md-10 pt-3">
      <%= render 'layouts/alerts' %>
      <div class="table-responsive">
        <h2>Artifact Types</h2>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @artifact_types.each do |artifact_type| %>
              <tr>
                <td><%= artifact_type.name %></td>
                <td><%= link_to artifact_type do %><%= fa_icon "folder-open" %><% end %></td>
                <td>
                  <%= link_to edit_artifact_type_path(artifact_type) do %>
                    <%= fa_icon "pencil" %>
                  <% end %>
                </td>
                <td>
                  <%= link_to artifact_type, method: :delete, data: { confirm: 'Are you sure?' } do %>
                    <%= fa_icon "trash" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>
