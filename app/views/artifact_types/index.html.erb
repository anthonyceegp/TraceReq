<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="row">    
    <div class="table-responsive col-12">
      <h2>Artifact Types</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @artifact_types.each do |artifact_type| %>
            <tr>
              <td><%= artifact_type.name %></td>
              <td><%= link_to artifact_type do %><%= fa_icon "folder-open" %><% end %></td>
              <td><%= link_to edit_artifact_type_path(artifact_type) do %><%= fa_icon "pencil" %><% end %></td>
              <td><%= link_to artifact_type, method: :delete, data: { confirm: 'Are you sure?' } do %><%= fa_icon "trash" %><% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

  <br>

<%= link_to 'New Artifact Type', new_artifact_type_path %>
