<h2>You're almost done! Now create a password to securely access your account.</h2>

<%= form_for(resource, as: resource_name, url: confirm_path, html: { method: :patch }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, id: :password, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, id: :password_confirmation%>
  </div>

  <div class="field">
    <%= f.hidden_field :confirmation_token, id: :confirmation_token, value: @original_token %>
  </div>

  <div class="actions">
    <%= f.submit "Confirm Account" %>
  </div>
<% end %>

<%= render "users/shared/links" %>