<%= form_with url: path, method: :get, local: true, class: "form-inline d-flex flex-nowrap mb-3" do |form| %>
  <%= form.text_field :term, id: :search_term, placeholder: "Search", value: params[:term], class: "form-control mr-2" %>
  <%= form.submit "Search", name: nil, class: "btn btn-outline-dark" %>
<% end %>