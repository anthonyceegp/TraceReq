<%= form_with(url: filter_path(@project, @demand), id:"form-filter") do |form| %>
	<div class="form-group row">
		<div class="col-sm-2">Artifacts</div>
		<div class="col-sm-3">
			<div class="form-check">
  			<%= form.label :show_all, class: "form-check-label" do %>
					<%= form.check_box(:show_all, {class: "form-check-input"}, 1, 0) %> Show all
				<% end %>
				<small class="form-text text-muted">
					Displays all artifacts from project <%= @project.name %>.
				</small>
			</div>
		</div>
	</div>
	<fieldset class="form-group">
		<div class="row">
			<legend class="col-form-legend col-sm-2">Artifact Types</legend>
			<div class="col-sm-3 pb-2">
				<%= form.collection_select(:origin_artifact_type_id, @artifact_types, :id, :name, {prompt: 'Select'}, {class: "form-control"}) %>
				<small class="form-text text-muted">Origin artifact type.</small>
			</div>
			<div class="col-sm-3">
				<%= form.collection_select(:end_artifact_type_id, @artifact_types, :id, :name, {prompt: 'Select'}, {class: "form-control"}) %>
				<small class="form-text text-muted">End artifact type.</small>
			</div>
		</div>
	</fieldset>
	<div class="form-group row">
		<%= form.label :relationship_type_id, class: "col-sm-2 col-form-label" %>
		<div class="col-sm-3">
			<%= form.collection_select(:relationship_type_id, @relationship_types, :id, :name, {prompt: 'Select'}, {class: "form-control"}) %>
		</div>
	</div>

	<%= form.submit "Filter", class: "btn btn-outline-dark" %>
<% end %>