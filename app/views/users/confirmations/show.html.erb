<h5 class="text-center">Create a password to securely access your account.</h5>

<%= form_for(resource, as: resource_name, url: confirm_path, html: { method: :patch }) do |f| %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, resource.email, readonly: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, id: :username, autofocus: true, class: "form-control #{is_invalid(resource, :username)}" %>
    <%= error_message_for(resource, :username) %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, id: :password, autofocus: true, class: "form-control #{is_invalid(resource, :password)}" %>
    <%= error_message_for(resource, :password) %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation  %>
    <%= f.password_field :password_confirmation, id: :password_confirmation, class: "form-control #{is_invalid(resource, :password_confirmation)}" %>
    <%= error_message_for(resource, :password_confirmation) %>
  </div>

  <%= f.hidden_field :confirmation_token, id: :confirmation_token, value: @original_token %>

  <%= f.submit "Confirm Account", class: "btn" %>
<% end %>