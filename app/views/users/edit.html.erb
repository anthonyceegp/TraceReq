<% content_for :title, "Edit" %>
<% navigation_add 'Users', users_path %>
<% navigation_add @user.username, user_path(@user) %>

<h2>Editing User</h2>
<%= form_with(model: @user, local: true, multipart: true) do |form| %>
  <div class="form-group row">
    <%= label_tag :email, nil, class: "col-form-label col-sm-2" %>
    <div class="col-sm-5"> 
      <p class="form-control-plaintext"><%= @user.email %></p>
    </div>    
  </div>

  <div class="form-group row">
    <%= form.label :username, class: "col-form-label col-sm-2" %>
    <div class="col-sm-5">
      <%= form.text_field :username, id: :username, class: "form-control #{is_invalid(@user, :username)}" %>
      <%= error_message_for(@user, :username) %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :avatar, class: "col-form-label col-sm-2" %>
    <div class="col-sm-5">
      <%= form.file_field :avatar, id: :avatar, class: "form-control #{is_invalid(@user, :avatar)}" %>
      <%= error_message_for(@user, :avatar) %>
    </div>      
  </div>

   <%= form.submit(class: "btn btn-primary") %>
   <%= link_to "Cancel", :back, class: "btn btn-danger" %>
<% end %>