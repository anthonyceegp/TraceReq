<% content_for :title, "Users" %>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead class="text-nowrap">
      <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Confirmed at</th>
        <th><%= link_to new_user_path, title: "New User", class: "float-right" do %><%= fa_icon "plus" %><% end %></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr class="clickable-row" data-href="<%= user_path(user) %>">
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td><%= user.confirmed_at.to_date unless user.confirmed_at.nil? %></td>
          <td class="not-clikable"><%= link_to user, method: :delete, data: { confirm: 'Are you sure?' }, class: "float-right" do %>
              <%= fa_icon "trash" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate(@users) %>
</div>
