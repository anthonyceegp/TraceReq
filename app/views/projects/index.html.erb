<div class="container-fluid">
  <div class="row">
    <nav class="col-sm-3 col-md-2 d-none d-sm-block bg-light sidebar">
      <ul class="nav nav-pills flex-column">
        <li class="nav-item">
          <%= link_to "New Project", new_project_path, class: "nav-link active" %>
        </li>
        <% @projects.each do |project| %>
          <li class="nav-item">
            <%= link_to project.name, project, class: "nav-link" %>
          </li>
          
          <% project.demands.each do |demand| %>
            <li class="nav-item">
              <%= link_to "- #{demand.name}", [project, demand], class: "nav-link" %>
            </li>
          <% end %>
        <% end %>
      </ul>
    </nav>
    <main class="col-sm-9 ml-sm-auto col-md-10 pt-3">
      <h2>Projects</h2>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Created by</th>
              <th>Created at</th>
              <th>Updated at</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @projects.each do |project| %>
              <tr>
                <td><%= project.name %></td>
                <td><%= project.description %></td>
                <td><%= project.user_create.email %></td>
                <td><%= project.created_at.to_date %></td>
                <td><%= project.updated_at.to_date %></td>
                <td><%= link_to project do %><%= fa_icon "folder-open" %><% end %></td>
                <td><%= link_to edit_project_path(project) do %><%= fa_icon "pencil" %><% end %></td>
                <td>
                  <%= link_to project, method: :delete, data: { confirm: 'Are you sure?' } do %>
                    <%= fa_icon "trash" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>