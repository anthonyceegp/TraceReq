<% content_for :title, 'Projects' %>

<div class="table-responsive table-hover">
  <table class="table table-striped">
    <thead class="text-nowrap">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Created by</th>
        <th>Created at</th>
        <th>Updated at</th>
        <th><%= link_to new_project_path, title: "New Project", class: "float-right" do %><%= fa_icon "plus" %><% end %></th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr class="clickable-row" data-href="<%= project_path(project) %>">
          <td><%= project.name %></td>
          <td><%= project.description %></td>
          <td><%= project.user.username %></td>
          <td><%= project.created_at.to_date %></td>
          <td><%= project.updated_at.to_date %></td>
          <td class="not-clikable">
            <%= link_to project, method: :delete, data: { confirm: 'Are you sure?' }, class: "float-right" do %>
              <%= fa_icon "trash" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate(@projects) %>
</div>