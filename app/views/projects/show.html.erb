<div class="container-fluid">
  <div class="row">
    <nav class="col-sm-3 col-md-2 d-none d-sm-block bg-light sidebar">
      <ul class="nav nav-pills flex-column">
        <li class="nav-item">
          <%= link_to "New Demand", new_project_demand_path(@project), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Edit Project", edit_project_path(@project), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Delete Project", @project, method: :delete, data: { confirm: 'Are you sure?' }, class: "nav-link" %>
        </li>
      </ul>
    </nav>
    <main class="col-sm-9 ml-sm-auto col-md-10 pt-3">
      <h2>Demands</h2>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Created by</th>
              <th>Created at</th>
              <th>Updated at</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @project.demands.each do |demand| %>
              <tr>
                <td><%= demand.name %></td>
                <td><%= demand.description %></td>
                <td><%= demand.user_create.email %></td>
                <td><%= demand.created_at.to_date %></td>
                <td><%= demand.updated_at.to_date %></td>
                <td><%= link_to [@project, demand] do %><%= fa_icon "folder-open" %><% end %></td>
                <td><%= link_to edit_project_demand_path(@project, demand) do %><%= fa_icon "pencil" %><% end %></td>
                <td>
                  <%= link_to [@project, demand], method: :delete, data: { confirm: 'Are you sure?' } do %>
                    <%= fa_icon "trash" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>