<div class="container-fluid">
	<div class="row">
		<nav class="col-sm-3 col-md-2 d-none d-sm-block bg-light sidebar">
			<ul class="nav nav-pills flex-column">
        <li class="nav-item">
          <%= link_to "PJe", @project, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Demands", project_demands_path(@project), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Users", project_users_path(@project), class: "nav-link active" %>
        </li>
        <li class="nav-item">
          <%= link_to "Projects", projects_path, class: "nav-link" %>
        </li>
      </ul>
		</nav>
		<main class="col-sm-9 ml-sm-auto col-md-10 pt-3">
			<h2>Users</h2>
			<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>E-mail</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
						<% @users.each do |user| %>
							<tr>
								<td><%= user.email %></td>
								<td><%= link_to user do%><%= fa_icon "folder-open" %><% end %></td>
								<td><%= link_to edit_user_path(user) do %><%= fa_icon "pencil" %><% end %></td>
								<td><%= link_to project_remove_user_path(@project, user), method: :post do %><%= fa_icon "trash" %><% end %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
				<%= paginate(@users) %>
			</div>
			<%= link_to "Add User", project_add_users_path(@project), class: "btn btn-primary", role: "button" %>
		</main>
	</div>
</div>