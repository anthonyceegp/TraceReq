<%= form_with(model: @project, local: true) do |form| %>
  <div class="form-group row">
    <%= form.label :name, class: "col-form-label col-sm-1" %>
    <div class="col-sm-3">
      <%= form.text_field :name, id: :project_name, class: "form-control #{is_invalid(@project, :name)}" %>
      <%= error_massage_for(@project, :name) %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :description, class: "col-form-label col-sm-1" %>
    <div class="col-sm-3">
      <%= form.text_area :description, id: :project_description, class: "form-control" %>
    </div>
  </div>

  <%= form.submit(class: "btn btn-primary") %>
  <%= link_to "Cancel", :back, class: "btn btn-danger", role: "button" %>
<% end %>
