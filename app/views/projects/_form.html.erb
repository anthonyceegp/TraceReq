<%= form_with(model: @project, local: true) do |form| %>
  <div class="form-group row">
    <%= form.label :name, class: "col-form-label col-sm-2" %>
    <div class="col-sm-5">
      <%= form.text_field :name, id: :project_name, class: "form-control #{is_invalid(@project, :name)}" %>
      <%= error_message_for(@project, :name) %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :description, class: "col-form-label col-sm-2" %>
    <div class="col-sm-5">
      <%= form.text_area :description, id: :project_description, class: "form-control" %>
    </div>
  </div>

  <%= form.submit(class: "btn btn-primary") %>
<% end %>
