<%= form_with(model: [@project, @demand], local: true) do |form| %>
  <div class="form-group row">
    <%= form.label :name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-3">
      <%= form.text_field :name, id: :demand_name, class: "form-control #{is_invalid(@demand, :name)}" %>
      <%= error_message_for(@demand, :name) %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :description, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-3">
      <%= form.text_area :description, id: :demand_description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :release, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-3">
      <%= form.text_field :release, id: :demand_release, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :responsible_user_id, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-3">
      <%= form.collection_select(:responsible_user_id, @users, :id, :username, {prompt: 'Select'}, {class: "form-control #{is_invalid(@demand, :responsible_user)}"}) %>
      <%= error_message_for(@demand, :responsible_user) %>
    </div>
  </div>

  <%= form.submit class: "btn btn-primary" %>
<% end %>
