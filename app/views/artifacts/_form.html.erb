<%= form_with(model: [@project, @demand, artifact], local: true, multipart: true) do |form| %>
  <% if artifact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(artifact.errors.count, "error") %> prohibited this artifact from being saved:</h2>

      <ul>
      <% artifact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :code, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :code, id: :artifact_code, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name, id: :artifact_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :description, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_area :description, id: :artifact_description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :priority, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :priority, id: :artifact_priority, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :artifact_type_id, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.collection_select(:artifact_type_id, @artifact_types, :id, :name, {prompt: 'Select'}, {class: "form-control"}) %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :file, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.file_field :file, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10">
      <%= form.submit(class: "btn btn-primary") %>
    </div>
  </div>
<% end %>
