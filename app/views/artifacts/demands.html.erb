<div class="container-fluid">
  <div class="row">
    <%= render "layouts/sidebar" %>
    <main class="col-sm-9 ml-sm-auto col-md-10 pt-3">
      <%= render 'layouts/alerts' %>
      <h2><%= [@artifact.code_with_name, "Demands"].join(" - ") %></h2>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Reponsible</th>
              <th>Created at</th>
              <th>Updated at</th>
            </tr>
          </thead>
          <tbody>
            <% @demands.each do |demand| %>
              <tr class="clickable-row" data-href="<%= url_for(controller: 'demands', action: :show, id: demand) %>">
                <td><%= demand.name %></td>
                <td><%= demand.description %></td>
                <td><%= demand.responsible_user.username %></td>
                <td><%= demand.created_at.to_date %></td>
                <td><%= demand.updated_at.to_date %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate(@demands) %>
      </div>
    </main>
  </div>
</div>