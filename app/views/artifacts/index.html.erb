<p id="notice"><%= notice %></p>

<h1>Artifacts</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Priority</th>
      <th>Artifact type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artifacts.each do |artifact| %>
      <tr>
        <td><%= artifact.code %></td>
        <td><%= artifact.name %></td>
        <td><%= artifact.description %></td>
        <td><%= artifact.priority %></td>
        <td><%= artifact.artifact_type_id %></td>
        <td><%= link_to 'Show', artifact %></td>
        <td><%= link_to 'Edit', edit_artifact_path(artifact) %></td>
        <td><%= link_to 'Destroy', artifact, method: :delete, data: { confirm: 'All related artifacts will be destoyed. Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

